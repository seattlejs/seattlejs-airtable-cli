{
  "name": "seattlejs-data-pipeline",
  "version": "1.0.0",
  "description": "data pipeline for producing seattlejs website data",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "start": "ts-node --esm index.ts",
    "test": "npm run build && mocha test ./out/test/*.spec.js",
    "build": "tsc --build",
    "pipeline": "node --no-experimental-fetch index.js && pushd .. && npm run lint && popd",
    "lint": "prettier ./index.js ./src --write && eslint ./index.js ./src --fix"
  },
  "dependencies": {
    "airtable": "^0.11.6",
    "dotenv": "^16.0.3",
    "jimp": "^0.22.4",
    "prompts": "^2.4.2",
    "slugify": "^1.6.6",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/prompts": "^2.4.4",
    "eslint": "^8.34.0",
    "eslint-config-prettier": "^4.2.1",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "prettier": "2.8.3",
    "ts-node": "^10.9.1"
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "ignorePatterns": [],
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2022
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/seattlejs/seattlejs.com.git"
  },
  "keywords": [
    "seattlejs"
  ]
}
